<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <persistence-context/>

    <var name="reservation" class="org.jboss.snowdrop.samples.sportsclub.domain.entity.Reservation"/>

    <view-state id="selectAccount">
		<transition on="next" to="chooseDate" bind="false" />
	</view-state>

	<view-state id="chooseDate">
		<transition on="next" to="confirmReservation" />
        <transition on="previous" to="selectAccount"/>
	</view-state>

    <view-state id="confirmReservation"/>

	<end-state id="finishReservation" commit="true"  view="searchReservation"/>

</flow>