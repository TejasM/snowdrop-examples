    </converter>
        -->
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
             <from-outcome>create</from-outcome>
            <to-view-id>/createReservation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
             <from-outcome>search</from-outcome>
            <to-view-id>/searchReservation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>